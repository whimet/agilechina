<project name="Emma Imports">
    <taskdef resource="emma_ant.properties">
		<classpath>
			<pathelement location="panopticode/supplements/emma/lib/emma.jar" />
			<pathelement location="panopticode/supplements/emma/lib/emma_ant.jar" />
		</classpath>
	</taskdef>

    <macrodef name="panopticode-setup-coverage">
        <attribute name="classDir" />
        <attribute name="outputDir" />

        <sequential>
            <echo message="Panopticode - Using Emma for code coverage metrics" />
            <delete dir="@{outputDir}/scratch/emma" failonerror="no" />
            <mkdir dir="@{outputDir}/scratch/emma" />
            
            <emma enabled="true">
                <instr instrpath="@{classDir}"
                       metadatafile="@{outputDir}/scratch/emma/metadata.emma"
                       merge="true"
                       mode="overwrite" />
            </emma>
        </sequential>
    </macrodef>

    <macrodef name="panopticode-junit">
        <attribute name="outputDir" />
        <attribute name="panopticodeDir" default="panopticode" />
        <attribute name="unitTestClasspathId" />

        <element name="thetests" implicit="yes" />

        <sequential>
            <echo message="If you get an error stating 'Could not create task or type of type: junit' then you need to copy the junit.jar file to your ANT_HOME/lib directory."/>

            <junit fork="yes" forkmode="once" haltonfailure="yes">
                <classpath>
                    <path refid="@{unitTestClasspathId}" />
                    <fileset dir="@{panopticodeDir}" includes="supplements/emma/lib/*.jar" />
                </classpath>
                <jvmarg value="-Demma.coverage.out.file=@{outputDir}/scratch/emma/coverage.emma" />
                <jvmarg value="-Demma.coverage.out.merge=true" />

                <formatter type="plain" usefile="false" />
                <formatter type="xml" />

                <thetests />
            </junit>
        </sequential>
    </macrodef>

    <macrodef name="panopticode-report-coverage">
        <attribute name="outputDir" />
        <attribute name="srcDir" />

        <sequential>
            <delete file="@{outputDir}/rawmetrics/xml/emma.xml" />
            <delete dir="@{outputDir}/rawmetrics/html/emma" />

            <emma enabled="true">
                <report sourcepath="@{srcDir}">
                    <fileset dir="@{outputDir}/scratch/emma">
                        <include name="*.emma" />
                    </fileset>
                    <sourcepath>
                        <dirset dir=".">
                            <include name="@{srcDir}" />
                        </dirset>
                    </sourcepath>
                    <xml outfile="@{outputDir}/rawmetrics/xml/emma.xml" />
                    <html outfile="@{outputDir}/rawmetrics/html/emma/emma-coverage.html" />
                </report>
            </emma>
        </sequential>
    </macrodef>
</project>